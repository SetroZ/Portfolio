datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Article {
  id      Int       @id @default(autoincrement())
  title   String
  body    String
  image   String?
  likes   Int
  Comment Comment[]
}

model Comment {
  name       String
  Article    Article @relation(fields: [article_id], references: [id])
  article_id Int
  likes      Int

  @@id([name, article_id])
}
